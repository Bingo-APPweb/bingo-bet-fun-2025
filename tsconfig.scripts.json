{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "outDir": "./dist",
      "paths": {
        "@/*": ["src/*"]
      },
      "types": ["node"]
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": ["scripts/**/*"],
    "exclude": ["node_modules"]
  }