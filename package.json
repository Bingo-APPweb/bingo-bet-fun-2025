{
  "name": "bingo-bet-fun-2025",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.18.0"
  },
  "scripts": {
    "start": "ts-node src/tools/analyzer/test.ts",
    "dev": "ts-node src/index.ts",
    "build": "tsc --noEmit && vite build",
    "build:analyze": "tsc scripts/analyze-project.ts --outDir dist",
    "build:analyzer": "tsc -p tsconfig.tools.json",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:all": "npm run build:client && npm run build:server",
    "build:staging": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "preview:staging": "vite preview --mode staging",
    "preview:prod": "vite preview --mode production",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:analyzer": "ts-node src/tools/analyzer/test.ts",
    "test:with-emulator": "firebase emulators:exec 'vitest'",
    "test:vite": "cd vite-project && npm test",
    "test:maintainer": "cd bingo-maintainer && npm test",
    "test:all": "npm run test && npm run test:vite && npm run test:maintainer",
    "analyze": "ts-node src/tools/analyzer/test.ts",
    "analyze:js": "node dist/tools/analyzer/cli.js",
    "analyze:prod": "node dist/scripts/analyze-project.js",
    "analyze:watch": "tsx watch src/tools/analyzer/cli.ts",
    "analyze:project": "tsx scripts/analyze-project.ts",
    "maintain": "ts-node src/tools/maintenance/maintain.ts",
    "setup:analyzer": "tsx src/tools/setup.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "organize": "tsx scripts/organize-tree.ts",
    "organize:dry": "NODE_ENV=development ts-node --esm scripts/organize-tree.ts --dry-run",
    "emulator": "firebase emulators:start",
    "deploy": "gcloud run deploy bingoapp-service --source . --platform managed --region us-central1 --allow-unauthenticated",
    "auto-deploy": "node git-auto-deploy.js"
  },
  "dependencies": {
    "@firebase/app": "^0.10.16",
    "@firebase/auth": "^1.8.1",
    "@firebase/firestore": "^4.7.5",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tanstack/react-query": "^5.61.3",
    "@tanstack/react-query-devtools": "^5.61.3",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "compression": "^1.7.5",
    "express": "^4.21.1",
    "firebase": "^11.0.2",
    "helmet": "^8.0.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.5.4",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^20.17.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-c8": "^0.31.4",
    "@vitest/ui": "^0.31.4",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-tools": "^13.25.0",
    "jsdom": "^21.1.2",
    "msw": "^2.6.6",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^0.31.4"
  },
  "description": "Um jogo de bingo multiplayer interativo com integração de streams.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}